<%- model_class = Himalaya -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @himalaya.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @himalaya.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reserva) %>:</strong></dt>
  <dd><%= @himalaya.reserva %></dd>
  <dt><strong><%= model_class.human_attribute_name(:personas) %>:</strong></dt>
  <dd><%= @himalaya.personas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hora) %>:</strong></dt>
  <dd><%= @himalaya.hora %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @himalaya.phone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              himalayas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_himalaya_path(@himalaya), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              himalaya_path(@himalaya),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
